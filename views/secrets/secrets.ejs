<%- include('partials/header') %>

<div class="jumbotron text-center width-65">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secrets!</h1>

    <%usersWitchSecrets.forEach(function(user) {%>
    <p><%=user.secret%></p>
    <%})%>
    <hr>

    <% if(status==="loggedIn"){ %>
    <a class="btn btn-dark btn-lg" href="/secrets/submit" role="button">Submit a Secret</a>
    <a class="btn btn-light btn-lg" href="/secrets/logout" role="button">Log Out</a>
    <% }else { %>
    <a class="btn btn-dark btn-lg" href="/secrets/submit" role="button">Submit a Secret</a>
    <a class="btn btn-light btn-lg" href="/secrets/register" role="button">Register</a>
    <a class="btn btn-light btn-lg" href="/secrets/login" role="button">Log in</a>
    <% } %>

  </div>
</div>

<%- include('partials/footer') %>
